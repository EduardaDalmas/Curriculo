@model Init.Models.Pessoa

@{
    ViewData["Title"] = "Pessoa";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="/img/foto.jpg" height="400px" width="400"/>
        </div>
        <div class="col-md-6">
            <h2>Dados Pessoais</h2>
            <ul>
                <li>Nome:  @Model.Nome</li>
                <li>Id: @Model.Id</li>
                <li>CPF:  @Model.CPF</li>
                <li>Telefone: @Model.Telefone</li>
                <li>Email: @Model.Email</li>
            </ul>
        </div>
    </div>
</div>